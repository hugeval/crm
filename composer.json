{
    "name": "hugeval/crm",
    "description": "OroCRM",
    "homepage": "https://github.com/hugeval/crm.git",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Oro, Inc",
            "homepage": "http://www.orocrm.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "OroCRM\\Bundle": "src/"
         }
    },
    "repositories": {
        "composer": {
            "type": "composer",
            "url": "http://packagist.orocrm.com"
        },
        "platform": {
            "type": "vcs",
            "url": "git@github.com:hugeval/platform.git"
        }
    },
    "require": {
        "php": ">=5.5",
        "hugeval/platform": "1.x-dev"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
